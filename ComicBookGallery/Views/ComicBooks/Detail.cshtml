@model ComicBookGallery.Models.ComicBook

@{
    //@ tells editor we want to use C#.
    Layout = "~/Views/Shared/_Layout.cshtml"; //path to the "shared" layout page
    ViewBag.Title = Model.DisplayText; //shows in browser tab
    ViewBag.ShowBackBar = true;
}
<style>
    label{
        color:blue;
    }
    .model{
        color:#ff0000;
    }
    .other {
        color: olivedrab;
    }
</style>



<h2>@Model.SeriesTitle</h2> 
@Html.ActionLink("Descargar Archivo", "DownloadFile", new {})
<div class="row">
    <div class="col-md-6">
        <div class="well model">            
            <h5><label>Series Title:</label> @Html.Label(Model.SeriesTitle, new { @class = "other" })</h5>
            <h5><label>Issue #:</label> @Html.Label(Model.IssueNumber.ToString(), new { @class = "other" })</h5>
            <h5><label>Favorite:</label>@Html.Label(Model.Favorite ? "Yes" : "No", new { @class = "other" }) </h5>
            @if (Model.Artists.Length > 0)
        {
            <h5>Artists:</h5>
            <div>
                <ul>
                    @foreach (var artist in Model.Artists)
                {
                    <text><!-- @artist.Name --></text>
                    <li>@artist.Role: @artist.Name</li>
            }
                </ul>
            </div>
    }
        </div>
        <h5>Description</h5>
        <div class="other">
            @Html.Raw(Model.DescriptionHtml)
        </div>
    </div>
    <div class="col-md-6">
        <img src="/Images/@Model.CoverImageFileName"
             alt="@Model.DisplayText" class="img-responsive" />
    </div>
</div>